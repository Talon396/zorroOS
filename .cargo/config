[unstable]
build-std = ["core", "compiler_builtins", "alloc"]
build-std-features = ["compiler-builtins-mem"]

[build]
target = "riscv64gc-unknown-none-elf" # Change this if building for a different architecture

[target.riscv64gc-unknown-none-elf]
rustflags = [
    "-C", "link-arg=-Tmachine/RiscV_Virt/link.ld", # Change this if building for a different machine
]
runner = "qemu-system-riscv64 -machine virt -cpu rv64 -smp 4 -m 128M -nographic -serial mon:stdio -bios /usr/lib/riscv64-linux-gnu/opensbi/generic/fw_jump.elf -kernel "